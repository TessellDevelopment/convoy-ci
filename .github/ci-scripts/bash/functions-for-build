  mv ./target/function.zip  ${ARTIFACT}-${LATEST_TAG}.zip
  aws s3 cp ${ARTIFACT}-${LATEST_TAG}.zip s3://${TESSELLOPS_ARTIFACTS_DEV_S3}/${LABEL}/${ARTIFACT}/${ARTIFACT}-${LATEST_TAG}.zip   
  generate_checksum "${ARTIFACT}-${LATEST_TAG}.zip"
  set +e
}

